@using IS_Klinika.Areas.ModulKadrovskaSluzba.Models
@{
    ViewBag.Title = "Uredi";
}
@model IS_Klinika.Areas.ModulKadrovskaSluzba.Models.OpstinaUrediVM

@using (Html.BeginForm("Snimi", "Opstina"))
{
    @Html.HiddenFor(model => model.Id)
    <br /><br /><br />
    <div>
         <div class="col-md-offset-3 col-md-6">
            <div class="well well-sm">
                <span class="text-bg text-info">Općina unos</span>
            </div>
            <div class="form-group-sm">
                <div class="input-group-sm">
                    <label for="inputsm">PTT</label>
                    @Html.TextBoxFor(model => model.PTT, new { @class = "form-control" })
                    @Html.ValidationMessage("PTT", new { @class="text-danger"})
                </div>
            </div>
            <div class="form-group-sm">
                <div class="input-group-sm">
                    <label for="inputsm">Naziv</label>
                    @Html.TextBoxFor(model => model.Naziv, new { @class = "form-control" })
                @Html.ValidationMessage("Naziv", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group-sm">
                <div class="input-group-sm">
                    <label class="checkbox checkbox-inline"><span class="text-bg text-danger">Valid</span></label>
                    @Html.CheckBoxFor(model => model.Valid, new { @class = "checkbox checkbox checkbox-inline" })
                </div>
            </div>
            <hr />
            <div>
                <input type="submit" value="Snimi" class="btn btn-success btn-xs" />
            </div>
        </div>
    </div>
}
