@using IS_Klinika.Areas.ModulKadrovskaSluzba.Models
@{
    ViewBag.Title = "Uredi";
}
@model IS_Klinika.Areas.ModulKadrovskaSluzba.Models.RadnoMjestoIndexVM.RadnoMjestoInfo

@using (Html.BeginForm("Snimi", "RadnoMjesto"))
{
    @Html.HiddenFor(model => model.Id)
    <br /><br /><br />
    <div>
        <div class="col-md-offset-3 col-md-6">
            <div class="well well-sm"><span class="text-bg text-info">Radno mjesto unos</span></div>
            <div class="form-group-sm">
                <div class="input-group-sm">
                    <label>Šifra</label>
                    @Html.TextBoxFor(model => model.Sifra, new { @class = "form-control" })
                    @Html.ValidationMessage("Sifra", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group-sm">
                <div class="input-group-sm">
                    <label>Naziv</label>
                    @Html.TextBoxFor(model => model.Naziv, new { @class = "form-control" })
                    @Html.ValidationMessage("Naziv", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group-sm">
                <div class="input-group-sm">
                    <label>Opis</label>
                    @Html.TextBoxFor(model => model.Opis, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group-sm">
                <div class="input-group-sm">
                    <label>Osnovica</label>
                    @Html.TextBoxFor(model => model.Osnovica, new { @class = "form-control" })
                    @Html.ValidationMessage("Osnovica", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group-sm">
                <div class="input-group-sm">
                    <label>Koefcijent</label>
                    @Html.TextBoxFor(model => model.Koefcijent, new { @class = "form-control" })
                    @Html.ValidationMessage("Koefcijent", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group-sm">
                <div class="input-group-sm">
                    <label class="checkbox checkbox-inline"><span class="text-bg text-danger">Valid</span></label>
                    @Html.CheckBoxFor(model => model.Valid, new { @class = "checkbox checkbox-inline" })
                </div>
            </div>
            <hr />
            <div>
                <input type="submit" value="Snimi" class="btn btn-success btn-xs" />
            </div>
        </div>
    </div>
}
