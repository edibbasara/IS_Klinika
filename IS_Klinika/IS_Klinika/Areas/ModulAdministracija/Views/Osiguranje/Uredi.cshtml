@using IS_Klinika.Areas.ModulAdministracija.Models
@{
    ViewBag.Title = "Uredi";
}
@model IS_Klinika.Areas.ModulAdministracija.Models.OsiguranjeUrediVM

@using (Html.BeginForm("Snimi", "Osiguranje")) { 

    
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.PacijentId)
    <br /><br /><br />
    <div class="well well-sm">
        <span class="text-bg text-info">Osiguranje pacijenta - @Model.PacijentImePrezime</span>
    </div>
    <div class="col-md-4">
        <div class="form-group-sm">
            <div class="input-group-sm">
                <label>Naziv poslodavca</label>
                @Html.TextBoxFor(model => model.NazivPoslodavca, new { @class = "form-control" })
                @Html.ValidationMessage("NazivPoslodavca", new { @class="text-danger"})
            </div>
        </div>
        <div class="form-group-sm">
            <div class="input-group-sm">
                <label>Općina</label>
                @Html.DropDownListFor(model => model.OpstinaId, Model.OpstineList, new { @class = "form-control" })
            @Html.ValidationMessage("OpstinaId", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group-sm">
            <div class="input-group-sm">
                <label>Adresa</label>
                @Html.TextBoxFor(model => model.Adresa, new { @class = "form-control" })
            @Html.ValidationMessage("Adresa", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group-sm">
            <div class="input-group-sm">
                <label>Lični broj osiguranja</label>
                @Html.TextBoxFor(model => model.LicniBrOsig, new { @class = "form-control" })
            
            </div>
        </div>
        <div class="form-group-sm">
            <div class="input-group-sm">
                <label>Registarski broj</label>
                @Html.TextBoxFor(model => model.RegBr, new { @class = "form-control" })
            @Html.ValidationMessage("RegBr", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group-sm">
            <div class="input-group-sm">
                <label>Zajednica</label>
                @Html.TextBoxFor(model => model.Zajednica, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group-sm">
            <div class="input-group-sm">
                <label>Radno mjesto</label>
                @Html.TextBoxFor(model => model.RadnoMjesto, new { @class = "form-control" })
            @Html.ValidationMessage("RadnoMjesto", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group-sm">
            <div class="input-group-sm">
                <label>Osiguran od</label>
                @Html.TextBoxFor(model => model.OsiguranOd, new { @class = "form-control" })
            @Html.ValidationMessage("OsiguranOd", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group-sm">
            <div class="input-group-sm">
                <label>Osiguran do</label>
                @Html.TextBoxFor(model => model.OsiguranDo, new { @class = "form-control" })
            @Html.ValidationMessage("OsiguranDo", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group-sm">
            <div class="input-group-sm">
                <label class="checkbox checkbox-inline"><span class="text-bg text-danger" >Valid</span></label>
                @Html.CheckBoxFor(model => model.Valid, new { @class = "checkbox checkbox-inline" })
            </div>
        </div>
    </div>    
    <div class="col-lg-12">
        <hr />
        <div>
            <input type="submit" value="Snimi" class="btn btn-success btn-xs" />
        </div>
    </div>
}



