@using IS_Klinika.Areas.ModulKadrovskaSluzba.Models
@{
    ViewBag.Title = "Uredi";
}
@model IS_Klinika.Areas.ModulKadrovskaSluzba.Models.TerminiUrediVM

@using (Html.BeginForm("Snimi", "Termini"))
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model=>model.SmjenaId)
    <br /><br /><br />
    <div>
        <div class="col-md-offset-3 col-xs-6">
            <div class="well well-sm"><span class="text-bg text-info">Termin unos - @Model.SmjenaNaziv</span></div>
            <div class="form-group-sm">
                <div class="input-group-sm">
                    <label>Sat</label>
                    @Html.TextBoxFor(model => model.Sati, new { @class = "form-control" })
                    @Html.ValidationMessage("Sati", new { @class="text-danger"})
                </div>
            </div>
            <div class="form-group-sm">
                <div class="input-group-sm">
                    <label>Minut</label>
                    @Html.TextBoxFor(model => model.Minuti, new { @class = "form-control" })
                    @Html.ValidationMessage("Minuti", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group-sm">
                <div class="input-group-sm">
                    <label class="checkbox checkbox-inline"><span class="text-bg text-danger">Valid</span></label>
                    @Html.CheckBoxFor(model => model.Valid, new { @class = "checkbox checkbox-inline" })
                </div>
            </div>
            <hr />
            <div>
                <input type="submit" value="Snimi" class="btn btn-success btn-xs" />
            </div>
        </div>
    </div>
}

