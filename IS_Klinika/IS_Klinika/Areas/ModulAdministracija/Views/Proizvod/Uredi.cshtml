@using IS_Klinika.Areas.ModulAdministracija.Models
@{
    ViewBag.Title = "Proizvod - unos";
}
@model IS_Klinika.Areas.ModulAdministracija.Models.ProizvodUrediVM

@using (Html.BeginForm("Snimi", "Proizvod")) { 
    <br /><br /><br />
<div class="col-md-offset-3 col-md-6"  >
    <div class="well well-sm" ><span class="text-bg text-info">Proizvod unos</span></div>
    <div class="form-group">
        <div class="input-group-sm">
            <label>Naziv</label>
            @Html.TextBoxFor(model => model.Naziv, new { @class = "form-control" })
            @Html.ValidationMessage("Naziv", new { @class="text-danger"})
        </div>
    </div>
    <div class="form-group">
        <div class="input-group-sm">
            <label>Cijena</label>
            @Html.TextBoxFor(model => model.Cijena, new { @class = "form-control" })
        @Html.ValidationMessage("Cijena", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="input-group-sm">
            <label>Popust</label>
            @Html.TextBoxFor(model => model.Popust, new { @class = "form-control" })
            @Html.ValidationMessage("Popust", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="checkbox checkbox-inline"><span class="text-bold text-danger">Valid</span></label>
        @Html.CheckBoxFor(model => model.Valid, new { @class = "checkbox checkbox-inline" })
    </div>
    <hr />
    <div>
        <input type="submit" value="Snimi" class="btn btn-success btn-xs" /> 
    </div>
</div>
}

