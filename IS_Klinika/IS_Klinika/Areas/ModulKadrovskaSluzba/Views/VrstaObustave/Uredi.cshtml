@using IS_Klinika.Areas.ModulKadrovskaSluzba.Models
@{
    ViewBag.Title = "Vrste obustava - unos";
}
@model IS_Klinika.Areas.ModulKadrovskaSluzba.Models.VrstaObustaveUrediVM

@using (Html.BeginForm("Snimi", "VrstaObustave")) {
    @Html.HiddenFor(model=>model.Id) 
    <br /><br /><br />
<div>
    <div class="col-md-offset-3 col-md-6">
    <div class="well well-sm" ><span class="text-bg text-info">Vrste obustava - unos</span></div>
        <div class="form-group">
            <div class="input-group-sm">
                <label>Naziv</label>
                @Html.TextBoxFor(model => model.Naziv, new { @class = "form-control" })
                @Html.ValidationMessage("Naziv", new { @class="text-danger"})
            </div>
        </div>
        <div class="form-group">
            <div class="input-group-sm">
                <label>Žiro račun broj</label>
                @Html.TextBoxFor(model => model.ZiroRN, new { @class = "form-control" })
                @Html.ValidationMessage("ZiroRN", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="input-group-sm">
                <label class="checkbox checkbox-inline"><span class="text-bg text-danger">Valid</span></label>
                @Html.CheckBoxFor(model => model.Valid, new { @class = "checkbox checkbox-inline" })
            </div>
        </div>
    <hr />
    <div>
        <input type="submit" value="Snimi" class="btn btn-success btn-xs" /> 
    </div>
</div>
</div>
}
